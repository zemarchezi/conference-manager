{
  "name": "conference-manager",
  "version": "1.0.0",
  "description": "Conference management system for organizing academic conferences - abstract submissions, reviews, and scheduling",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run next",
    "next": "next dev",
    "build": "next build",
    "build:local": "npm run services:seed && next build",
    "start": "next start",
    "start:local": "npm run services:seed && next start && npm run services:stop",
    "email": "email dev --dir models/transactional/emails --port 3001",
    "services:seed": "kill-port 3000 && npm run services:up && npm run migrations:up && node infra/scripts/seed-database.js",
    "services:up": "npm run docker:compose -- up -d",
    "services:stop": "npm run docker:compose -- stop",
    "services:down": "npm run docker:compose -- down",
    "docker:compose": "docker compose --env-file .env -f infra/docker-compose.development.yml",
    "preconcurrently": "kill-port 3000 && npm run services:up",
    "concurrently": "concurrently -s first -P -k -n next,vitest \"npm run next\" \"vitest {@}\"",
    "postconcurrently": "npm run services:stop",
    "test": "npm run concurrently -- --hide next -- run",
    "test:watch": "vitest watch",
    "test:watch:services": "npm run concurrently -- -- watch",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint . --max-warnings 0",
    "lint:prettier": "prettier --check .",
    "lint:fix": "eslint --fix . && prettier --write .",
    "commit": "cz",
    "migrations:create": "node-pg-migrate --migrations-dir ./infra/migrations create",
    "migrations:up": "node -r dotenv/config -r dotenv-expand/config infra/scripts/wait-for-db-connection-ready.js && node-pg-migrate up --envPath ./.env -m infra/migrations/ 2>migrations.log",
    "migrations:down": "node-pg-migrate down --envPath ./.env -m infra/migrations",
    "migrations:dry-run": "node-pg-migrate up --dry-run --envPath ./.env -m infra/migrations",
    "migrations:seed": "node -r dotenv/config -r dotenv-expand/config infra/scripts/seed-database.js",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "engines": {
    "node": "22.x"
  },
  "keywords": [
    "conference",
    "academic",
    "management",
    "abstract",
    "review"
  ],
  "author": "zemarchezi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zemarchezi/conference-manager.git"
  },
  "bugs": {
    "url": "https://github.com/zemarchezi/conference-manager/issues"
  },
  "homepage": "https://github.com/zemarchezi/conference-manager#readme",
  "dependencies": {
    "@react-email/components": "0.0.19",
    "@react-email/render": "0.0.15",
    "async-retry": "1.3.3",
    "bcrypt": "^6.0.0",
    "bcryptjs": "3.0.2",
    "cookie": "0.6.0",
    "date-fns": "4.1.0",
    "joi": "17.13.3",
    "next": "15.3.2",
    "next-connect": "1.0.0",
    "node-pg-migrate": "7.9.1",
    "nodemailer": "7.0.3",
    "nprogress": "0.2.0",
    "pg": "8.15.6",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "resend": "4.5.1",
    "slug": "11.0.0",
    "slugify": "^1.6.6",
    "snakeize": "0.1.0",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@commitlint/cz-commitlint": "19.8.1",
    "@faker-js/faker": "9.8.0",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.3.0",
    "concurrently": "9.1.2",
    "dotenv": "16.5.0",
    "dotenv-expand": "12.0.2",
    "eslint": "8.57.0",
    "eslint-config-next": "15.3.2",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.1.7",
    "jsdom": "^25.0.1",
    "kill-port": "1.6.1",
    "lint-staged": "16.0.0",
    "prettier": "3.4.2",
    "react-email": "4.0.15",
    "set-cookie-parser": "2.7.1",
    "vitest": "2.1.8"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
