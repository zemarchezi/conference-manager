# Environment Variables Template
# Copy this file to .env and fill in your values

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=conference_manager
POSTGRES_PASSWORD=your-password-here
POSTGRES_DB=conference_manager_db

# Database URL for connection
DATABASE_URL=postgresql://conference_manager:your-password-here@localhost:5432/conference_manager_db

# Next.js Configuration
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3000

# Session Configuration
SESSION_SECRET=change-this-to-a-random-secret-key
SESSION_EXPIRATION_DAYS=30

# Application Configuration
APP_NAME=Conference Manager
APP_VERSION=1.0.0

# Email Configuration (Optional)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@conferencemanager.com

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true